<% include header %>
  <div class="counter">
    <div class="header-nav">
      <div class="logo">
        <h1>Cal Tracker</h1>
      </div>
      <div class="header-links">
        <h2>Calorie Chart</h2>
      </div>
    </div>
    <div class="counter-main">
      <h1>Calorie Log</h1>
      <h2>Enter your calories here after you eat.</h2>

      <div class="form-wrapper">
        <div class="form">
          <form action="/api" method="post">
            <div class="form-group">
              <label for="food">Food</label>
              <input type="text" name="food">
            </div>
            <div class="form-group">
              <label for="meal">Meal</label>
              <input type="text" name="meal">
            </div>
            <div class="form-group">
              <label for="calories">Calories</label>
              <input type="text" name="calories">
            </div>
            <button type="submit">post it!</button>
          </form>
        </div>
        <div class="calorie-view">
          <h1 class="calories">View your days calories.</h1>
        </div>
          </div>
    </div>

    <div class="day-viz-wrap">
      <div class="day-viz">
        <!-- Insert calorie data here! -->
      </div>
    </div>

  </div>
  <% include footer %>
